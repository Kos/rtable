{
  "plugins": [
    "react"
  ],
  "extends": "plugin:react/recommended",
  "parserOptions": {
    sourceType: "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": [2, {"vars": "local", "args": "none"}],
    "indent": [2, 2],
    "semi": [2, "always"],
    "eqeqeq": [2],
    "react/prop-types": [0] // some other time
  },
  "env": {
    "browser": true,
    "mocha": true,
  },
}
